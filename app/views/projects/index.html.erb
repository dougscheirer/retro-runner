<div class="container">
  <div class="row">
  <% for i in 0..@projects.size-1 %>
     <% project = @projects[i] %>
      <div data-retros-url="<%= project_retros_path(project) %>" class="col-xd-4 col-xs-4 col-md-4 project-card">
          <a href="<%= project_path(project) %>" style="float: right;" data-method="DELETE" data-confirm="Are you sure?" rel="nofollow">
            <span class="glyphicon glyphicon-trash"></span>
          </a>
          <a href="<%= edit_project_path(project) %>" style="float: right;"><span class="glyphicon glyphicon-pencil"></span></a>
          [<%= project.id %>] <%= project.name %><br>
          <%= project.description %><br>
          Owned by <a href="<%= user_path(user(project.owner_id)) %>"><%= user(project.owner_id).name %></a><br>
      </div>
  <% end %>
  </div>
</div>

<div class="row">
    <%= link_to 'New Project', new_project_path %>
</div>
