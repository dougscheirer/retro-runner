<div class="container">
  <div class="row">
  <% for i in 0..@projects.size %>
     <% project = @projects[i] %>
     <% if !project.nil? then %>
          <div class="col-xd-4 col-xs-4 col-md-4 project-card" data-retros-url="<% project_retros_path(project) %>">
              <a href="<%= project_path(project) %>" style="float: right;" data-method="DELETE" data-confirm="Are you sure?" rel="nofollow">
                <span class="glyphicon glyphicon-trash"></span>
              </a>
              <a href="<%= edit_project_path(project) %>" style="float: right;"><span class="glyphicon glyphicon-pencil"></span></a>
              [<%= project.id %>] <%= project.name %><br>
              <%= project.description %><br>
              Owned by <%= project.owner_id %><br>
          </div>
     <% end %>
  <% end %>
  </div>
</div>

<div class="row">
    <%= link_to 'New Project', new_project_path %>
</div>
