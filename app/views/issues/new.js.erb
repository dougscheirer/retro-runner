if (<%= @issue.issue_type.nil? %>) {
    var general = $("#add-issue-general");
    if (general.html() == "") {
        general.css("width", "75%")
        general.html("<%= j (render partial: "issues/form", locals: {
        title: "New issue",
        button_title: "Add item",
        action: retro_issues_path(@retro),
        action_method: "POST" }) %>");
        general.slideDown(400);
    }
    else {
        general.slideUp(400, function() {general.html("");});
    }
}
else if ($("#add-issue-<%= @issue.issue_type %>").html() == "") {
    $("#add-issue-<%= @issue.issue_type %>").html("<%= j (render partial: "issues/form", locals: {
    title: "New issue",
    button_title: "Add item",
    action: retro_issues_path(@retro),
    action_method: "POST" }) %>");
    $("#add-issue-<%= @issue.issue_type %>").slideDown(400);
}
else {
    $("#add-issue-<%= @issue.issue_type %>").slideUp(400, function() {$("#add-issue-<%= @issue.issue_type %>").html("");});

}