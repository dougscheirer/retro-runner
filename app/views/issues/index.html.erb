<h4>This week's issues</h4>
<table class="table">
  <thead>
    <tr>
      <div class="col-md-4 retro-header retro-good"><a href="/issues/new?type=Good"><span class="glyphicon glyphicon-plus"></span></a> The good</div>
      <div class="col-md-4 retro-header retro-meh"><a href="/issues/new?type=Meh"><span class="glyphicon glyphicon-plus"></span></a> The meh <a href="/issues/new"></div>
      <div class="col-md-4 retro-header retro-bad"><a href="/issues/new?type=Bad"><span class="glyphicon glyphicon-plus"></span></a> The ugly</div>
    </tr>
  <thead>

  <tbody>

    <% for index in 0..@max_issues-1 %>
      <tr>
        <div class="col-md-4
          <% if @good_issues[index] %>
            retro-good">
            [<%= @good_issues[index].member %>] <%= @good_issues[index].description %>
          <% else %>
            ">
            &nbsp;
          <% end %>
        </div>
        <div class="col-md-4
          <% if @meh_issues[index] %>
            retro-meh">
            [<%= @meh_issues[index].member %>] <%= @meh_issues[index].description %>
          <% else %>
            ">
            &nbsp;
          <% end %>
        </div>
        <div class="col-md-4
          <% if @bad_issues[index] %>
            retro-bad">
            [<%= @bad_issues[index].member %>] <%= @bad_issues[index].description %>
          <% else %>
            ">
            &nbsp;
          <% end %>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
