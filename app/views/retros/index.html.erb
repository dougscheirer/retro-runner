<h1>
  <a href="<%= project_path(@project) %>"> <%= @project.name %></a> - Retros
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Retro ID</th>
      <th>Meeting date</th>
      <th>Created by</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retros.each do |retro| %>
      <tr>
        <td><%= retro.id %></td>
        <td><a href="<%= retro_path(retro) %>"><%= retro.meeting_date %></a></td>
        <td>
          <% if retro.creator_id.nil? %>
            Unknown
          <% else %>
            <a href="<%= user_path(user(retro.creator_id)) %>"><%= user(retro.creator_id).name %> (<%= user(retro.creator_id).email %>)</a>
          <% end %>
        </td>
        <td><%= retro.status %></td>
        <td><%= link_to 'Destroy', retro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Retro', new_project_retro_path(@project) %> |
