<center><h1>Tasks for Next Week</h1></center>

<table class="table">
  <thead>
  <tr>
    <th>description</th>
    <th>assigned to</th>
    <th>issue</th>
  </tr>
  </thead>

  <tbody>
  <% tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.assigned_to %></td>
        <td><%= Issue.find(task.issue_id).description %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_outstanding_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
