var editform = $("#edit-task");
if (editform.html() == "") {
    editform.css("width", "75%")
    editform.html("<%= j (render partial: "outstandings/form", locals: {
    title: "Edit task",
    button_title: "Modify",
    action: outstanding_path(@outstanding),
    action_method: "PATCH" }) %>");
    editform.slideDown({duration: 400, progress: function() {window.scrollTo(0,document.body.scrollHeight);}});

}
else {
    editform.slideUp(400, function() {editform.html("");});
}
